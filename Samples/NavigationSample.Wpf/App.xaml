<Application x:Class="NavigationSample.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NavigationSample.Wpf"
             xmlns:viewModels="clr-namespace:NavigationSample.Wpf.ViewModels"
             xmlns:views="clr-namespace:NavigationSample.Wpf.Views"
             Startup="Application_Startup">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModels:ItemDetailsViewModel}">
            <DataTemplate.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded" SourceName="View">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation From="120" To="0" Duration="0:0:0.3" 
                                             Storyboard.TargetName="View"
                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </DataTemplate.Triggers>
            <views:ItemDetailsView x:Name="View">
                <views:ItemDetailsView.RenderTransform>
                    <TranslateTransform />
                </views:ItemDetailsView.RenderTransform>
            </views:ItemDetailsView>
        </DataTemplate>
    </Application.Resources>
</Application>
