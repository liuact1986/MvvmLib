<UserControl x:Class="NavigationSample.Wpf.Views.First"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NavigationSample.Wpf.Views"
             xmlns:mvvmLib="http://mvvmlib.com/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border  BorderBrush="Black" BorderThickness="5" Margin="5">
        <Grid Background="#e66767">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Title, FallbackValue='First'}" FontSize="40" Foreground="#ea8685" HorizontalAlignment="Center" Margin="5"/>

            <ContentControl mvvmLib:RegionManager.ContentRegionName="First" Grid.Row="1" Margin="5"/>
        </Grid>
    </Border>
</UserControl>
