<Window x:Class="NavigationSample.Wpf.Views.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:NavigationSample.Wpf.Views"
        xmlns:nav="http://mvvmlib.com/"
        nav:ViewModelLocator.ResolveWindowViewModel="True"
        mc:Ignorable="d"
        Title="Shell" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Content="Master Detail" Command="{Binding NavigateCommand}" 
                    CommandParameter="{x:Type views:MasterDetailView}" Margin="5"></Button>
            <Button Content="Animation" Command="{Binding NavigateCommand}" 
                    CommandParameter="{x:Type views:AnimationView}" Margin="5"></Button>
        </StackPanel>

        <ContentControl nav:RegionManager.ContentRegion="MainRegion" Grid.Row="1"></ContentControl>
    </Grid>
</Window>
