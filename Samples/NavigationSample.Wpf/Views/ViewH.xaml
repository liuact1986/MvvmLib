<UserControl x:Class="NavigationSample.Wpf.Views.ViewH"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:NavigationSample.Wpf.Controls"
             Background="#778beb"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="View H" FontSize="40" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            <TextBox x:Name="MessageTextBox" Focusable="True" Text="{Binding Message, FallbackValue='No value provided'}" FontSize="24" Width="250" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
