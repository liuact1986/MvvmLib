<UserControl x:Class="NavigationSample.Wpf.Views.ViewC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NavigationSample.Wpf.Views"
             Background="#347777"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="View C" FontSize="40" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"></TextBlock>
        <TextBlock Text="{Binding Message, FallbackValue='No value'}" FontSize="24" HorizontalAlignment="Center"></TextBlock>
    </StackPanel>
</UserControl>
