<UserControl x:Class="ChildRegionsSample.Views.Second"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChildRegionsSample.Views"
             xmlns:nav="http://mvvmlib.com/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border  BorderBrush="Black" BorderThickness="5" Margin="5">
        <Grid Background="#f3a683">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Text="Second" FontSize="40" Foreground="#f19066" HorizontalAlignment="Center" Margin="5"/>

            <ContentControl nav:RegionManager.ContentRegionName="Second" Grid.Row="1" Margin="5"/>
        </Grid>
    </Border>
</UserControl>
