<UserControl x:Class="RegionSample.Views.ViewD"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RegionSample.Views"
             xmlns:nav="http://mvvmlib.com/"
             Background="#8e44ad"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="View D (child)" Style="{StaticResource TitleTextBlockStyle}" HorizontalAlignment="Center"></TextBlock>
            <TextBlock Text="IActivatable (code-behind)"  Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center"></TextBlock>
        </StackPanel>
        
        <ContentControl x:Name="SubChildControl" nav:RegionManager.ContentRegionName="SubChildRegion" Grid.Row="1"></ContentControl>

        <ContentControl x:Name="SubChildControl2" nav:RegionManager.ContentRegionName="SubChildRegion" Grid.Row="2"></ContentControl>
    </Grid>

</UserControl>
