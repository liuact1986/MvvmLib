<UserControl x:Class="RegionSample.Views.ViewC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RegionSample.Views"
             xmlns:nav="http://mvvmlib.com/"
             Background="orange"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="View C" Style="{StaticResource TitleTextBlockStyle}" HorizontalAlignment="Center"></TextBlock>
        <TextBlock Text="{Binding Message}" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center"></TextBlock>
        <TextBlock x:Name="LoadedMessage" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center"></TextBlock>
    </StackPanel>

</UserControl>
