<Window x:Class="ValidationSample.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValidationSample.Views"
        mc:Ignorable="d"
        FontSize="18"
        Title="Validation Sample" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Content="Wrapper Sample" Click="OnWrapperSampleClick" Margin="3"></Button>
            <Button Content="Validatable Sample" Click="OnValidatableAndEditableSampleClick" Margin="3"></Button>
            <Button Content="ViewModel Validatable Sample" Click="OnViewModelValidatableSampleClick" Margin="3"></Button>
        </StackPanel>
        <ContentControl x:Name="MainContent" Grid.Row="1"/>
    </Grid>

</Window>
